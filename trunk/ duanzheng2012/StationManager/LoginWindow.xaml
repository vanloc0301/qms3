		<Label Margin="263,24,248,0" VerticalAlignment="Top" Height="70" Content="登陆" Grid.Column="1" FontSize="48" Foreground="White"/>
		<Button HorizontalAlignment="Right" Margin="0,91,170,0" VerticalAlignment="Top" Width="48" Height="48" Content="1" Background="White" Grid.Column="1" FontSize="26.667" Name="btn1" Click="ButtonNum_Click" RenderTransformOrigin="0.521,0.479"/>
